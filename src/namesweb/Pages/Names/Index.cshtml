@page
@model namesweb.Pages.Names.IndexModel

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "_Layout";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Names[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Names[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Names[0].FullName)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Names) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
        </tr>
}
    </tbody>
</table>